---
import Head from '@components/layout/Head.astro';
import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';


import { Sprite } from 'astro-icon';

import '@scss/main.scss';
const { title } = Astro.props;
const currentPageUrl = Astro.url.pathname;

const isHomePage = currentPageUrl === '/' || currentPageUrl === '/en/' ;
---
<html lang="ru" class={`_search layout ${isHomePage ? 'layout--home _home': ''}`}>
  <Head title={title} />
  <body class="layout__body">
    <Sprite.Provider />
    <Header />
    <main class="layout__main article">
      <slot />
    </main>
    <Footer classNames="layout__footer" />
    <script>
      import '@js/main.js'
    </script>
  </body>
</html>