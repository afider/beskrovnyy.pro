---
import { getLang } from '@utils/GetLang.astro';
import { Sprite } from 'astro-icon';

const currentPageUrl = Astro.url.pathname;
---

<article class="socials">
  {
    (getLang(currentPageUrl) === 'en') ? 
    (<h2>Contacts</h2>) : 
    (<h2>Контакты</h2>)
  }
  <ul class="socials__list">
    <li class="socials__item socials__item_linkedin">
      <a href="https://www.linkedin.com/in/evgeniy-beskrovnyy/" class="socials__link">
        <Sprite name="linkedin" width="30" height="30" class="socials__icon" />
        LinkedIn
      </a>
    </li>
    <li class="socials__item socials__item_instagram">
      <a href="https://instagram.com/evgeniy.beskrovnyy" class="socials__link">
        <Sprite name="instagram" width="30" height="30" class="socials__icon" />
        {
          (getLang(currentPageUrl) === 'en') ? 
          ('Instagram') : 
          ('Инстаграм')
        }
      </a>
    </li>
    <li class="socials__item socials__item_github">
      <a href="https://github.com/afider" class="socials__link">
        <Sprite name="github" width="30" height="30" class="socials__icon" />
        {
          (getLang(currentPageUrl) === 'en') ? 
          ('GitHub') : 
          ('Гитхаб')
        }
      </a>
    </li>
    <li class="socials__item socials__item_email">
      <a href="mailto:e.beskrovnyy@gmail.com" class="socials__link">
        <Sprite name="email" width="30" height="30" class="socials__icon" />
        e.beskrovnyy@gmail.com
      </a>
    </li>
    <li class="socials__item socials__item_twitter">
      <a href="https://twitter.com/beskrovnyy" class="socials__link">
        <Sprite name="twitter" width="30" height="30" class="socials__icon" />
        {
          (getLang(currentPageUrl) === 'en') ? 
          ('Twitter') : 
          ('Твиттер')
        }
      </a>
    </li>
    <li class="socials__item socials__item_vk">
      <a href="https://vk.com/e.beskrovnyy" class="socials__link">
        <Sprite name="vk" width="30" height="30" class="socials__icon" />
        {
          (getLang(currentPageUrl) === 'en') ? 
          ('VK') : 
          ('Вконтакте')
        }
      </a>
    </li>
    <li class="socials__item socials__item_telegram">
      <a href="https://t.me/beskrovnyy_pro" class="socials__link">
        <Sprite name="telegram" width="30" height="30" class="socials__icon" />
        {
          (getLang(currentPageUrl) === 'en') ? 
          ('Telegram') : 
          ('Телеграм')
        }
      </a>
    </li>
    <li class="socials__item socials__item_phone">
      <a href="tel:+79185451866" class="socials__link">
        <Sprite name="phone" width="30" height="30" class="socials__icon" />
        +7 918 545-18-66
      </a>
    </li>
  </ul>
</article>