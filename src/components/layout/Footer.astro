---
import { getLang } from '@utils/GetLang.astro';

const currentPageUrl = Astro.url.pathname;
const currentYear = new Date().getFullYear();
let {classNames} = Astro.props;

(classNames === undefined) ? classNames = '' : classNames;
---

<footer class={`${classNames} footer`}>
  {
    (getLang(currentPageUrl) === 'en') ? 
    (<p>© 2009-{currentYear} Design, layout, programming and&nbsp;content by&nbsp;Evgeniy Beskrovnyy </p>) : 
    (<p>© 2009-{currentYear} Дизайн, верстка, программирование и&nbsp;текст&nbsp;— Евгений Бескровный</p>)
  }
</footer>